<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link asp-href-include="lib/bootstrap/dist/css/*.min.css" rel="stylesheet" />
</head>
<body class="m-1 p-1">

@*false is added to make this section optional*@
@RenderSection("Header", false)
<div class="bg-info">
    This is part of the layout
</div>

@RenderBody()
<div class="bg-info">
    This is part of the layout
</div>


@*this section checks if a section has been defined or returns a default result*@
@if (IsSectionDefined("Footer"))
{
    @RenderSection("Footer")
}
else
{
    <h4>This is the default footer</h4>}

<div class="bg-info">
    This is part of the layout
</div>
</body>
</html>
